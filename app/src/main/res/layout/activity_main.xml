<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Layout"

   tools:context=".MainActivity">

    <!-- Main content(main screen) -->
    <RelativeLayout android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <!-- Drawer Pane -->

    <RelativeLayout android:id="@+id/drawer_pane"
        android:layout_width="280dp"
        android:layout_gravity="start"
        android:layout_height="wrap_content">

        <!-- Profile box -->         <!-- android:gravity="center_vertical" -->
        <RelativeLayout android:id="@+id/profile_box"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/material_blue_grey_800">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="Haris and George"
                     android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AsthmaDoc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

            </LinearLayout>

        </RelativeLayout>


        <!-- Navigation ListView -->

        <ListView android:id="@+id/nav_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_box"
            android:choiceMode="singleChoice"
            android:background="#ffffff">

        </ListView>
    </RelativeLayout>
    

</android.support.v4.widget.DrawerLayout>
